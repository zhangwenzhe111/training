<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activity.CombinedTrainingActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_title_bar_new" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="1709px"
            android:layout_height="263px"
            android:background="@drawable/iv_hackerspace_mid" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1440px"
                android:layout_marginTop="160px"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="69px"
                    android:layout_height="77px"
                    android:src="@drawable/imagelogo"/>
                <ImageView
                    android:layout_width="167px"
                    android:layout_height="81px"
                    android:src="@drawable/logo"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_create"
            android:layout_width="614px"
            android:layout_height="483px"
            android:src="@drawable/iv_create_crouse"/>
        <ImageView
            android:id="@+id/iv_div"
            android:layout_width="614px"
            android:layout_height="483px"
            android:layout_marginLeft="180px"
            android:src="@drawable/iv_div_crouse"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="50px"/>
</LinearLayout>
