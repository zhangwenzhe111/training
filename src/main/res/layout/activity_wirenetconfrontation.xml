<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/sv_container"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">


            <LinearLayout
                android:id="@+id/ll_params"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:id="@+id/training_time"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="200dp"
                                android:text="训练时间:"
                                android:textSize="@dimen/param_level1_font_size"/>

                            <TextView
                                android:id="@+id/tv_training_time"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dip"
                                android:text="2"
                                android:textSize="@dimen/param_level1_font_size"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dip"
                                android:text="分钟"
                                android:textSize="@dimen/param_level1_font_size"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_training_time_sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/button_color_grey"
                                android:clickable="true"
                                android:src="@drawable/btn_sub"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="20dp"/>

                            <SeekBar
                                android:id="@+id/bar_training_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:max="20"
                                android:progress="2"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="30"
                                android:textSize="20dp"/>

                            <ImageView
                                android:id="@+id/img_training_time_add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:background="@drawable/button_color_grey"
                                android:clickable="true"
                                android:src="@drawable/btn_plus"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="200dp"
                                android:text="超时时间："
                                android:textSize="@dimen/param_level1_font_size"/>

                            <TextView
                                android:id="@+id/tv_over_time"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dip"
                                android:text="5"
                                android:textSize="@dimen/param_level1_font_size"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dip"
                                android:text="秒"
                                android:textSize="@dimen/param_level1_font_size"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_over_time_sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/button_color_grey"
                                android:clickable="true"
                                android:src="@drawable/btn_sub"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="5"
                                android:textSize="20dp"/>

                            <SeekBar
                                android:id="@+id/bar_over_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:max="28"
                                android:progress="5"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="30"
                                android:textSize="20dp"/>

                            <ImageView
                                android:id="@+id/img_over_time_add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:background="@drawable/button_color_grey"
                                android:clickable="true"
                                android:src="@drawable/btn_plus"/>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <include layout="@layout/layout_line_horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设备个数"
                            android:layout_weight="0.7"
                            android:textSize="25sp"/>

                        <Spinner
                            android:layout_weight="0.5"
                            android:id="@+id/sp_dev_num"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:background="@drawable/spinner">
                        </Spinner>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开灯"
                            android:layout_weight="1"
                            android:id="@+id/btn_on" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="每组设备个数"
                            android:layout_weight="0.2"
                            android:textSize="25sp"/>

                        <Spinner
                            android:layout_weight="0.5"
                            android:id="@+id/sp_device_num"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"

                            android:background="@drawable/spinner">
                        </Spinner>


                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关灯"
                            android:layout_weight="1"
                            android:id="@+id/btn_off" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="每次亮灯个数"
                            android:layout_weight="0.2"
                            android:textSize="25sp"/>

                        <Spinner
                            android:layout_weight="0.61"
                            android:id="@+id/sp_light_num"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"

                            android:background="@drawable/spinner">
                        </Spinner>
                    </LinearLayout>


                    <!--<LinearLayout-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:orientation="horizontal">-->

                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="设备编号: "-->
                            <!--android:textSize="@dimen/param_level1_font_size"/>-->

                        <!--<TextView-->
                            <!--android:id="@+id/tv_device_list"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="A B C D"-->
                            <!--android:textSize="@dimen/param_level1_font_size"/>-->

                    <!--</LinearLayout>-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="组别"
                            android:textSize="@dimen/param_level2_font_size"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="设备"
                            android:textSize="@dimen/param_level2_font_size"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="备注"
                            android:textSize="@dimen/param_level2_font_size"/>

                    </LinearLayout>
                    <include layout="@layout/layout_line_horizontal"/>

                    <ListView
                        android:id="@+id/lv_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">
                    </ListView>

                </LinearLayout>

                <include layout="@layout/layout_line_horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1.8"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="2.3"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dip"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="感应模式："
                                android:textSize="@dimen/param_level1_font_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_action_mode_light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/button_color_grey"
                                android:clickable="true"
                                android:src="@drawable/btn_checkbox"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dip"
                                android:gravity="center"
                                android:text="感应"
                                android:textSize="@dimen/param_level2_font_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_action_mode_touch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/button_color_grey"
                                android:clickable="true"
                                android:src="@drawable/btn_uncheckbox"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dip"
                                android:gravity="center"
                                android:text="触碰"
                                android:textSize="@dimen/param_level2_font_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_action_mode_together"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/button_color_grey"
                                android:clickable="true"
                                android:src="@drawable/btn_uncheckbox"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dip"
                                android:gravity="center"
                                android:text="同时"
                                android:textSize="@dimen/param_level2_font_size"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="2.3"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dip"
                                android:gravity="center"
                                android:text="闪烁模式："
                                android:textSize="@dimen/param_level1_font_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_blink_mode_none"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/button_color_grey"
                                android:clickable="true"
                                android:src="@drawable/btn_checkbox"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dip"
                                android:gravity="center"
                                android:text="不闪"
                                android:textSize="@dimen/param_level2_font_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_blink_mode_slow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/button_color_grey"
                                android:clickable="true"
                                android:src="@drawable/btn_uncheckbox"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dip"
                                android:gravity="center"
                                android:text="慢闪"
                                android:textSize="@dimen/param_level2_font_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_blink_mode_fast"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/button_color_grey"
                                android:clickable="true"
                                android:src="@drawable/btn_uncheckbox"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dip"
                                android:gravity="center"
                                android:text="快闪"
                                android:textSize="@dimen/param_level2_font_size"/>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="2.3"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dip"
                                android:gravity="center"
                                android:text="灯光颜色："
                                android:textSize="@dimen/param_level1_font_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_light_color_blue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/button_color_grey"
                                android:clickable="true"
                                android:src="@drawable/btn_checkbox"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dip"
                                android:gravity="center"
                                android:text="蓝色"
                                android:textSize="@dimen/param_level2_font_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_light_color_red"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/button_color_grey"
                                android:clickable="true"
                                android:src="@drawable/btn_uncheckbox"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dip"
                                android:gravity="center"
                                android:text="红色"
                                android:textSize="@dimen/param_level2_font_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_light_color_green"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/button_color_grey"
                                android:clickable="true"
                                android:src="@drawable/btn_uncheckbox"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dip"
                                android:gravity="center"
                                android:text="绿色"
                                android:textSize="@dimen/param_level2_font_size"/>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <include layout="@layout/layout_line_horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_voice"
                            style="@style/custom_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="开灯时响"
                            android:textColor="@color/font_lightdark"
                            android:textSize="@dimen/param_level2_font_size"/>

                        <CheckBox
                            android:id="@+id/cb_end_voice"
                            style="@style/custom_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="关灯时响"
                            android:textColor="@color/font_lightdark"
                            android:textSize="@dimen/param_level2_font_size"/>

                        <CheckBox
                            android:id="@+id/cb_over_time_voice"
                            style="@style/custom_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="超时响"
                            android:textColor="@color/font_lightdark"
                            android:textSize="@dimen/param_level2_font_size"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <include layout="@layout/layout_line_vertical"></include>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="运行次数:"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="遗漏次数"
                    android:textSize="18sp"/>

                <!--<TextView-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center_horizontal"-->
                    <!--android:text="平均时间:"-->
                    <!--android:textSize="18sp"/>-->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="总时间"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_current_times"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="---"/>

                <TextView
                    android:id="@+id/tv_lost_times"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="---"/>

                <!--<TextView-->
                    <!--android:id="@+id/tv_average_time"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center_horizontal"-->
                    <!--android:text="-&#45;&#45;"/>-->

                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="---"/>

            </LinearLayout>

            <include layout="@layout/layout_line_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="组号"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
