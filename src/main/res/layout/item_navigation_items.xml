<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="317px"
        android:layout_height="226px"
        android:background="@drawable/navigation_item_bg"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="312px"
            android:layout_height="168px"
            android:background="@drawable/navigation_item_bg_1"
            android:gravity="center_horizontal"
            android:paddingTop="12px">

            <ImageView
                android:id="@+id/iv_item"
                android:layout_width="292px"
                android:layout_height="125px"
                android:src="@drawable/navigation_running_item0"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="折返跑"/>

    </LinearLayout>

</LinearLayout>