<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout
    android:layout_width="517px"
    android:layout_height="270px"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_combined_item_blank">
    <LinearLayout
        android:layout_width="494px"
        android:layout_height="178px"
        android:background="@drawable/bg_combined_item_white"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_itemGradView"
            android:layout_width="500px"
            android:layout_height="169px"
            android:src="@drawable/iv_combined_first"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_itemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="TextView" />
</LinearLayout>



</LinearLayout>